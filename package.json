{
  "name": "country-currency-exchange-api",
  "version": "0.0.1",
  "description": "Countries + Exchange Rates caching API (NestJS, MySQL, node-canvas)",
  "author": "Ajeigbe Olaoluwa Samuel",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:run": "typeorm-ts-node-esm migration:run -d ./src/database/data-source.ts",
    "typeorm:revert": "typeorm-ts-node-esm migration:revert -d ./src/database/data-source.ts",
    "typeorm:show": "typeorm-ts-node-esm migration:show -d ./src/database/data-source.ts",
    "typeorm:generate": "typeorm-ts-node-esm migration:generate ./src/migrations/auto -d ./src/database/data-source.ts",
    "typeorm:create": "typeorm-ts-node-esm migration:create ./src/migrations/manual",
    "typeorm:schema:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync -d ./src/database/data-source.ts",
    "docker:build": "docker build -t country-currency-exchange-api .",
    "docker:run": "docker run -p 8080:8080 --env-file .env -v %cd%/cache:/usr/src/app/cache country-currency-exchange-api",
    "docker:dev": "docker compose up --build",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=country-currency-exchange-api) || true",
    "docker:logs": "docker logs -f $(docker ps -q --filter ancestor=country-currency-exchange-api)"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.80",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@types/connect": "^3.4.38",
    "@types/express": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/send": "^1.2.1",
    "@types/serve-static": "^1.15.10",
    "@types/stack-utils": "^2.0.3",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
